{
  "name": "postcss-mangle-css-class",
  "version": "0.0.6",
  "description": "Minifies and obfuscates the class names without any modern css modules.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./in-browser": {
      "import": "./dist/in-browser.js",
      "require": "./dist/in-browser.cjs"
    }
  },
  "scripts": {
    "build": "rollup --config ./rollup.config.js --watch",
    "test": "node test/index.js"
  },
  "keywords": [
    "postcss",
    "css",
    "obfuscate",
    "minify",
    "mangle",
    "bootstrap",
    "tailwindcss"
  ],
  "author": "fernandcf",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.1.1",
    "hashids": "^2.3.0",
    "lodash.merge": "^4.6.2",
    "postcss-cli": "^10.1.0",
    "postcss-rename": "^0.6.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.5.0"
  }
}
